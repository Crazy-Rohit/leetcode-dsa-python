# Solution
#User function Template for python3

def nextPrime(n):
    
    # code here to find next prime number
    # return next prime number
    def isP(x):
        if x<=1:
            return False
            
        for i in range(2,int(x**0.5)+1):
            if x%i==0:
                return False
        
        return True
        
    s=n+1
    while s<=n*2:
        if isP(s):
            return s
        s=s+1
